<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yangyi.app.gcountdown">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TimerAndTastActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:label="@string/title_timetast"/>
        <activity android:name=".TimerAndHandlerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:label="@string/title_timehandler"/>
        <activity android:name=".HandlerMsgActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:label="@string/title_timetast"/>
        <activity android:name=".HandlerThreActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity android:name=".HandlerRunActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
